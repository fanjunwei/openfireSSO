<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- Servlets -->
    <servlet>
        <servlet-name>SSOStatusServlet</servlet-name>
        <servlet-class> org.fjw.openfire.plugin.sso.SSOStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SSORosterServlet</servlet-name>
        <servlet-class> org.fjw.openfire.plugin.sso.SSORosterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SSOMessageServlet</servlet-name>
        <servlet-class> org.fjw.openfire.plugin.sso.SSOMessageServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>SSOStatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SSORosterServlet</servlet-name>
        <url-pattern>/roster</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SSOMessageServlet</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
</web-app>
